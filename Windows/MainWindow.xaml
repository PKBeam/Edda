                                    <GradientStop Color="#00000000" Offset="0"/>
                                </LinearGradientBrush>
                            </Canvas.Background>
                        </Canvas>
                        <Canvas Grid.Column="3" Height="{Binding ElementName=EditorPanel, Path=ActualHeight}" Width="{Binding ElementName=DrumColStack, Path=ActualWidth}">
